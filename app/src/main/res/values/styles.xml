<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--My theme for splash screen-->
    <style name="AppTheme.Splashscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
